{
	"name": "vocabulario",
	"version": "1.0.0",
	"description": "Vocabulário da arquitetura tradicional luso-brasileira",
	"keywords": [
		"vocabulário controlado",
		"autoridade",
		"base de dados",
		"arquitetura tradicional"
	],
	"author": "Pedro P. Palazzo",
	"license": "CC0",
	"repository": "arqtrad/vocabulario",
	"main": "index.js",
	"scripts": {
		"11ty": "npx @11ty/eleventy",
		"dev": "npx @11ty/eleventy --serve",
		"css": "npm-run-all css-compile css-prefix",
		"css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules _scss/:assets/css/",
		"css-lint": "stylelint _scss/",
		"css-prefix": "postcss --replace assets/css/main.css --use autoprefixer --map",
		"watch": "nodemon --delay 3 -e html,scss -x \"npm run css\"",
		"start": "npm-run-all --parallel watch dev",
		"build": "npm-run-all css 11ty",
		"test": "npm-run-all css-lint css"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"bootstrap": "^5.3.5"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.0.0",
		"@11ty/eleventy-fetch": "^5.0.2",
		"@11ty/eleventy-img": "^6.0.2",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.3",
		"autoprefixer": "^10.4.21",
		"bootstrap-icons": "^1.11.3",
		"country-code-emoji": "^2.3.0",
		"csv-parse": "^5.6.0",
		"jquery": "^3.7.1",
		"js-yaml": "^4.1.0",
		"leaflet": "^1.9.4",
		"luxon": "^3.6.1",
		"node-pandoc": "^0.3.0",
		"nodemon": "^3.1.10",
		"npm-run-all": "^4.1.5",
		"pagefind": "^1.3.0",
		"path": "^0.12.7",
		"popper": "^1.0.1",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"sass": "^1.87.0",
		"sharp": "^0.34.1",
		"stylelint": "^16.19.0",
		"stylelint-config-twbs-bootstrap": "^16.0.0"
	}
}
